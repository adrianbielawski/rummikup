{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": "",
    "paths": {
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "global_styles/*": ["src/global_styles/*"],
      "constants/*": ["src/constants/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": [
    "src",
    "src/declarations"
  ]
}
